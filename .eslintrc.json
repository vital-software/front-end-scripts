{
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "globals": {
    "__dirname": true,
    "process": true
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "camelcase": [
      "error",
      {
        "properties": "never"
      }
    ],
    "no-console": "off",
    "no-magic-numbers": "off",
    "no-unused-vars": "error",
    "no-undef": "error"
  }
}
