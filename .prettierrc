{
  "arrowParens": "always",
  "printWidth": 120,
  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "overrides": [
    {
      "files": ["*.yml"],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": ["*.{graphql,gql,css,scss,js,jsx,ts,tsx}"],
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": "*.js.flow",
      "options": {
        "parser": "flow"
      }
    }
  ]
}
