{
  "name": "vitalizer",
  "version": "7.5.0",
  "description": "Vital Software front-end asset builder",
  "license": "MIT",
  "repository": "vital-software/vitalizer",
  "homepage": "https://github.com/vital-software/vitalizer#readme",
  "author": "Te Riu Warren <te@vitaler.co",
  "bugs": {
    "url": "https://github.com/vital-software/vitalizer/issues"
  },
  "files": [
    "bin",
    "config",
    "helper",
    "scripts"
  ],
  "release": {
    "verifyConditions": [
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]"
      }
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "scripts": {
    "lint": "eslint \"{bin,config,helper,scripts}/**/*.js\" --quiet",
    "test": "./test/task/local-test.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "bin": {
    "vitalizer": "./bin/vitalizer.js"
  },
  "dependencies": {
    "@babel/core": "7.7.4",
    "babel-loader": "8.0.6",
    "browserslist": "4.6.6",
    "case-sensitive-paths-webpack-plugin": "2.2.0",
    "chalk": "2.4.2",
    "connect-history-api-fallback": "1.6.0",
    "cross-spawn": "6.0.5",
    "css-loader": "3.2.0",
    "css-modules-typescript-loader": "2.0.4",
    "dotenv": "8.0.0",
    "dotenv-expand": "5.1.0",
    "file-loader": "4.2.0",
    "filesize": "4.1.2",
    "fs-extra": "8.1.0",
    "graphql": "14.4.2",
    "graphql-tag": "2.10.1",
    "gzip-size": "5.1.1",
    "html-webpack-plugin": "3.2.0",
    "koa-connect": "2.0.1",
    "koa-router": "7.4.0",
    "mini-css-extract-plugin": "0.8.0",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "postcss-color-function": "4.1.0",
    "postcss-import": "12.0.1",
    "postcss-loader": "3.0.0",
    "postcss-nested": "4.1.2",
    "postcss-nesting": "7.0.1",
    "postcss-preset-env": "6.7.0",
    "postcss-remify": "1.0.1",
    "postcss-scss": "2.0.0",
    "postcss-simple-vars": "5.0.2",
    "postcss-strip-inline-comments": "0.1.5",
    "postcss-url": "8.0.0",
    "recursive-readdir": "2.2.2",
    "speed-measure-webpack-plugin": "1.3.1",
    "strip-ansi": "5.2.0",
    "style-loader": "1.0.0",
    "terser-webpack-plugin": "2.2.1",
    "thread-loader": "2.1.3",
    "url-loader": "3.0.0",
    "webpack": "4.41.2",
    "webpack-dev-server": "3.9.0",
    "webpack-manifest-plugin": "2.2.0",
    "webpack-stylish": "0.1.8",
    "workbox-webpack-plugin": "4.3.1"
  },
  "devDependencies": {
    "@semantic-release/git": "7.0.16",
    "@vital-software/renovate-config": "1.1.6",
    "babel-eslint": "10.0.2",
    "eslint": "6.1.0",
    "husky": "3.0.3",
    "semantic-release": "15.13.19"
  },
  "peerDependencies": {
    "webpack-hot-client": "^4.0.4"
  }
}
